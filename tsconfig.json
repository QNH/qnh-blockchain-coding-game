{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "esModuleInterop": true,
    "paths": {
      "@app/*": ["app/*"],
      "@contracts/*": ["contracts/*"],
      "@environments/*": ["environments/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@styles/*": ["assets/styles/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "web3"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
